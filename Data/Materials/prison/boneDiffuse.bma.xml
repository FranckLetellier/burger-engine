<material>
  <technique name="render_gbuffer">
    <shadername>FillBGufferBasic</shadername>
    <vertexshader>../Data/Shaders/Material/FillGBufferBasic.vert</vertexshader>
    <pixelshader>../Data/Shaders/Material/FillGBufferBasic.frag</pixelshader>
    <uniforms>
      <float value="1.0">fTileSize</float>
    </uniforms>
  </technique>
  <technique name="render_opaque">
    <shadername>DiffuseSpecStrength</shadername>
    <vertexshader>../Data/Shaders/BasicVertexShaderTile.vert</vertexshader>
    <pixelshader>../Data/Shaders/Material/DiffuseSpecStrength.frag</pixelshader>
    <uniforms>
      <float value="1.0">fTileSize</float>
    </uniforms>
    <textures>
      <texture>
        <uniformname unit="0">diffuseMap</uniformname>
        <filename>../Data/Textures/prison/xml/bone_diffuse.btx.tga</filename>
      </texture>
      <texture>
        <uniformname unit="6">lightBuffer</uniformname>
      </texture>
    </textures>
  </technique>
</material>