<material>
  <technique name="render_gbuffer">
    <shadername>FillBGufferNorml</shadername>
    <vertexshader>../Data/Shaders/FillGBufferNormalMap.vert</vertexshader>
    <pixelshader>../Data/Shaders/FillGBufferNormalMap.frag</pixelshader>
    <uniforms>
      <float value="4.0">fTileSize</float>
    </uniforms>
    <samplers>
      <sampler>
        <uniformname unit="1">normalMap</uniformname>
        <filename>../Data/Textures/metal_floor_normals_gloss.tga</filename>
      </sampler>
    </samplers>
  </technique>
  <technique name="render_opaque">
    <shadername>DiffuseSpecStrength</shadername>
    <vertexshader>../Data/Shaders/BasicVertexShaderTile.vert</vertexshader>
    <pixelshader>../Data/Shaders/DiffuseSpecStrength.frag</pixelshader>
    <uniforms>
      <float value="4.0">fTileSize</float>
    </uniforms>
    <samplers>
      <sampler>
        <uniformname unit="0">diffuseMap</uniformname>
        <filename>../Data/Textures/metal_floor_diffuse.png</filename>
      </sampler>
      <sampler>
        <uniformname unit="1">specStrength</uniformname>
        <filename>../Data/Textures/metal_floor_strength.png</filename>
      </sampler>
      <sampler>
        <uniformname unit="6">lightBuffer</uniformname>
      </sampler>
    </samplers>
  </technique>
</material>