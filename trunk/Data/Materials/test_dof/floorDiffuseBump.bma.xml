<material>
  <technique name="render_gbuffer">
    <shadername>FillBGufferNorml</shadername>
    <vertexshader>../Data/Shaders/Material/FillGBufferNormalMap.vert</vertexshader>
    <pixelshader>../Data/Shaders/Material/FillGBufferNormalMap.frag</pixelshader>
    <uniforms>
      <float value="20.0">fTileSize</float>
    </uniforms>
    <textures>
      <texture>
        <uniformname unit="1">normalMap</uniformname>
        <filename>../Data/Textures/test_dof/xml/checkboard_normals.btx.xml</filename>
      </texture>
    </textures>
  </technique>
  <technique name="render_opaque">
    <shadername>DiffuseSpec</shadername>
    <vertexshader>../Data/Shaders/BasicVertexShaderTile.vert</vertexshader>
    <pixelshader>../Data/Shaders/Material/DiffuseSpec.frag</pixelshader>
    <uniforms>
      <float value="20.0">fTileSize</float>
    </uniforms>
    <textures>
      <texture>
        <uniformname unit="0">diffuseMap</uniformname>
        <filename>../Data/Textures/test_dof/xml/checkboard_diffuse.btx.xml</filename>
      </texture>
      <texture>
        <uniformname unit="6">lightBuffer</uniformname>
      </texture>
    </textures>
  </technique>
</material>