<material>
  <technique name="render_gbuffer">
    <shadername>FillGBUfferDiffuse</shadername>
    <vertexshader>../Data/Shaders/FillGBufferBasic.vert</vertexshader>
    <pixelshader>../Data/Shaders/FillGBufferBasic.frag</pixelshader>
    <uniforms>
      <float value="4.0">fTileSize</float>
    </uniforms>
  </technique>
  <technique name="render_opaque">
    <shadername>ToonShading</shadername>
    <vertexshader>../Data/Shaders/ToonShading.vert</vertexshader>
    <pixelshader>../Data/Shaders/ToonShading.frag</pixelshader>
    <uniforms>
      <float value="4.0">fTileSize</float>
    </uniforms>
    <samplers>
      <sampler>
        <uniformname unit="0">diffuseMap</uniformname>
        <filename>../Data/Textures/rock_diffuse.png</filename>
      </sampler>
      <sampler>
        <uniformname unit="1">lookUp</uniformname>
        <filename>../Data/Textures/toon_lookup.png</filename>
      </sampler>
      <sampler>
        <uniformname unit="6">lightBuffer</uniformname>
      </sampler>
    </samplers>
  </technique>
</material>